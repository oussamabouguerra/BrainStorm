<html>
<head>
    <meta charset="UTF-8">
    <title>Liste des promotions</title>
</head>
<body>
<h1>La liste des promotions</h1>

<table id="customers">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Type</th>
        <th>Description</th>
        <th>Pourcentage</th>
        <th>Code</th>
        <th>Cat√©gorie</th>


    </tr>
    </thead>
    <tbody>
    {% for U in promotion %}
        <tr>
            <td>{{ U.id }}</td>
            <td>{{ U.nom }}</td>
            <td>{{ U.type}}</td>
            <td>{{ U.description}}</td>
            <td>{{ U.pourcentage}}</td>
            <td>{{ U.code }}</td>
            <td>{{ U.cat.categorie }}</td>


        </tr>
    {% endfor %}
    </tbody>
</table>
</body>
</html>
<div class="icon-container">
    <a href="index.html.twig">
        <i class="far fa-arrow-alt-circle-left"></i>
        Back

    </a>
</div>

