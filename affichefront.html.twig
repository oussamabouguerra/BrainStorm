{% extends 'baseFront.html.twig' %}

{% block body %}
    <section class="dark-wrapper opaqued parallax" data-parallax="scroll" data-image-src="assets/img/bg/bg2.jpg" data-speed="0.7">
        <div class="section-inner pad-top-200">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mt30 wow text-center">
                        <h2 class="section-heading">Liste des Tickets</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <section>
        <table class="table m-table m-table--head-bg-success">
            <thead>
            <tr>

                <th>
                    prix ticket
                </th>

                <th>
                    nombre place
                </th>

                <th>
                    salle
                </th>
                <th>
                    date et heure
                </th>

                <th>
                    film
                </th>
                <th>
                    promo
                </th>




            </tr>
            </thead>

            {% for U in ticket%}
            <tr>

                <td>
                    {{ U.PrixTicket }}
                </td>

                <td>
                    {{ U.NbPlace }}
                </td>
                <td>
                    {{ U.Salle }}
                </td>
                <td>
                    {{ U.dateh | date("F jS \\a\\t g:ia") }}
                </td>

                <td>
                    {{ U.Film.nom }}
                </td>
                <td>
                    {{ U.Promo.pourcentage }}
                </td>


                {% endfor %}

            </tr>
        </table>
            <div class="text-center breadcrumbs_inner">
                {{ knp_pagination_render(ticket) }}
            </div>

        </section>
{% endblock %}

